<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoaplicaciones.login">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightBlue"  Margin="20">
            <Image Source="https://3.bp.blogspot.com/-ptMEF-Vjs18/V5V5PEuxWUI/AAAAAAAAATY/A7apdD58Ujwkf2Tx37EPWlBz7zxHN1aKQCLcB/s1600/espe-peque.png" HeightRequest="180" 
                   Aspect="AspectFit"/>
            <Frame CornerRadius="5" BorderColor="Gray" Padding="5">
            <Image Source="https://us.123rf.com/450wm/koblizeek/koblizeek2001/koblizeek200100050/138262629-usuario-miembro-de-perfil-de-icono-de-hombre-vector-de-s%C3%ADmbolo-perconal-sobre-fondo-blanco-aislado.jpg" HeightRequest="100" Aspect="AspectFit"/>
            </Frame>
            <Entry x:Name="usernameEntry" Placeholder="Nombre de usuario" />
            <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />
            <Button Text="Iniciar sesión" Clicked="OnLoginButtonClicked"
                    HorizontalOptions="Center"
                    BackgroundColor="CornflowerBlue"/>
            <Label Text="usuario predeterminado = admin" HorizontalTextAlignment="Center" FontSize="15" />
            <Label Text="contraseña predeterminada = espe123" HorizontalTextAlignment="Center" FontSize="15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>